<body>

    <div class="navbar navbar-inverse navbar-fixed-top" id="myNavbar">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand navbar-left" href="@Html.ActionLink("Home", "Index", "Home")">
                    <span>
                        <img id="hlogo" src="~/Content/LImages/trendafrik1.png" alt="logo" />
                    </span>
                </a>
            </div>

            <div class="collapse navbar-collapse" id="navbar-collapse">
                @*<a href="#" class="btn btn-warning navbar-btn navbar-right btn-sm"><span class="glyphicon glyphicon-search"></span></a>*@
                @*<input type="text" id="element-1" class="navbar-text navbar-right col-lg-4"  />*@
                <div class="col-lg-4 navbar-right navbar-btn navbar-text">
                    @using (@Html.BeginForm("SearchItem", "Catalogue"))
{

                        @Html.TextBox("search") <input type="submit" value="search" class="btn btn-warning btn-sm" />
                    }
                </div>
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Contact Us", "Create", "ContactUs")</li>
                    <li>@Html.ActionLink("FAQ", "Index", "JoinUs")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown">Catalogue<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            @*Place partial view here*@
                            @{Html.RenderAction("CatalogueList", "Catalogue");}
                           
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container-fluid">

        <div class="jumbotron text-center" id="Home" style="min-height: auto;">
            <h2 style="color: whitesmoke; margin: 25px 0px 15px 0px; "><strong>Welcome To Trend Afrik Online Catalogue</strong></h2>
        </div>


        <div class="row" id="myTopRow" style="margin: 25px 0px 30px 0px;">
            <div class="col-lg-2 col-md-2">
                <div class="panel  panel-success">
                    <div class="panel-heading">
                        <h3>Catalogue</h3>
                    </div>
                    <ul id="hmenu">
                        @{Html.RenderAction("CatalogueList", "Catalogue");}
                    </ul>

                </div>
            </div>

            

            <div class="col-sm-6">
                    @RenderBody()
                </div>

            <div class="col-sm-4 hidden-xs">
                @{Html.RenderAction("CatalogueAdvert", "Catalogue");}
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3>Check out our varieties</h3>
            </div>
            <div class="panel-body">
                <div class="col-sm-3">
                    <div class="thumbnail">
                        <a href="@Url.Action("Details", "Catalogue", new { id = 5 })">
                            <img src="~/Images/advert3b.png" alt="TrendAfriq" /><br />
                        </a>
                    </div>
                    <div class="caption">
                        <h4>Make Up Perfecto!</h4>
                        <p>Making You the Model You Already Are</p>
                        <a class="btn btn-success" href="@Url.Action("Details", "Catalogue", new { id = 5 })">Price is Negotiable, Call Us Now!</a>
                    </div>
                </div>
                <div class="col-md-3 col-sm-3">
                    <div class="thumbnail">
                        <a href="@Url.Action("Details", "Catalogue", new { id = 2 })">
